<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
		 version="3.1">






	<servlet>
		 <servlet-name> login </servlet-name>
		 <servlet-class>com.customer.LoginServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name> login </servlet-name>
		<url-pattern>/log</url-pattern>
	</servlet-mapping>
	
	
	
	<servlet>
		<servlet-name> customerinsert </servlet-name>
		 <servlet-class>com.customer.Customerinsert</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name> customerinsert </servlet-name>
		<url-pattern>/insert</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name> updatecustomer </servlet-name>
		 <servlet-class>com.customer.UpdteCustomerServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name> updatecustomer </servlet-name>
		<url-pattern>/update</url-pattern>
	</servlet-mapping>
	
	
	
	<servlet>
		<servlet-name> deletecustomer </servlet-name>
		 <servlet-class>com.customer.DeleteCustomerServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name> deletecustomer </servlet-name>
		<url-pattern>/delete</url-pattern>
	</servlet-mapping>
	
	
	
  <!-- Payment --> 
       <!-- Insert -->  
         <servlet>
		<servlet-name>paymentinsert</servlet-name>
		<servlet-class>com.payment.paymentinsertservlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>paymentinsert</servlet-name>
		<url-pattern>/insertpayment</url-pattern>
	</servlet-mapping>
	
	<!-- view -->  
         <servlet>
		<servlet-name>paymentview</servlet-name>
		<servlet-class>com.payment.paymentviewservlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>paymentview</servlet-name>
		<url-pattern>/viewpayment</url-pattern>
	</servlet-mapping>
         
        
      <!-- update -->  
         <servlet>
		<servlet-name>paymentupdate</servlet-name>
		<servlet-class>com.payment.paymentupdateservlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>paymentupdate</servlet-name>
		<url-pattern>/updatepayment</url-pattern>
	</servlet-mapping>   
         
         
          <!-- delete -->  
         <servlet>
		<servlet-name>paymentdelete</servlet-name>
		<servlet-class>com.payment.paymentdeleteservlet </servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>paymentdelete</servlet-name>
		<url-pattern>/deletepayment</url-pattern>
	</servlet-mapping>  
	
	



</web-app>

